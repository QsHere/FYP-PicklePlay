@model Schedule
@using FYP_QS_CODE.Models
@{
    ViewData["Title"] = "Delete Schedule";
}

<div class="container mt-4">
    <h2>Delete Schedule</h2>
    <h3 class="text-danger">Are you sure you want to delete this schedule?</h3>

    <div>
        <h4>@Model.GameName</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-3">
                @Html.DisplayNameFor(model => model.ScheduleType)
            </dt>
            <dd class = "col-sm-9">
                @Model.ScheduleType.ToString()
            </dd>
             <dt class = "col-sm-3">
                 @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd class = "col-sm-9">
                @Html.DisplayFor(model => model.Location)
            </dd>
             <dt class = "col-sm-3">
                 Start Time
            </dt>
            <dd class = "col-sm-9">
                 @if(Model.StartTime.HasValue)
                 {
                     @Model.StartTime.Value.ToString("g")
                 }
            </dd>
            <dt class = "col-sm-3">
                 Duration
            </dt>
            <dd class = "col-sm-9">
                 @if(Model.Duration.HasValue)
                 {
                    @ScheduleHelper.GetFriendlyDuration(Model.Duration.Value)
                 }
            </dd>
        </dl>

        <form asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ScheduleId" />
            <button type="submit" class="btn btn-danger">Delete</button> |
            <a asp-action="Details" asp-route-id="@Model.ScheduleId" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>