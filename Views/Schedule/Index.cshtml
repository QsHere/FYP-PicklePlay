@model IEnumerable<FYP_QS_CODE.Models.Schedule>
@{
    ViewData["Title"] = "Game Schedule";
    var today = DateTime.Today;
    var games = Model.Where(s => s.GameType == FYP_QS_CODE.Models.GameType.Social && s.StartTime.Date >= today)
                     .OrderBy(s => s.StartTime);
    var groupedGames = Model.GroupBy(g => g.StartTime.Date).OrderBy(g => g.Key);
}
<div class="container mt-4 page-wrapper">
    <h2 class="mb-4">Games Schedule</h2>

    @foreach (var dayGroup in groupedGames)
    {
        <h4 class="mt-5">
            @dayGroup.Key.ToString("dd/MM/yyyy (dddd)")
        </h4>

        @foreach (var game in dayGroup.OrderBy(g => g.StartTime))
        {
            <h6 class="text-muted mt-3">@game.StartTime.ToString("hh:mm tt")</h6>
            <div class="card mb-3 shadow-sm game-card"
                 onclick="location.href='@Url.Action("Details", "Schedule", new { id = game.Id })'"
                 style="cursor:pointer;">
                <div class="card-body d-flex align-items-center">
                    <img src="@game.CommunityIconUrl" alt="community" class="rounded-circle me-3" width="50" height="50" />
                    <div>
                        <h5 class="card-title mb-1">@game.Title</h5>
                        <p class="mb-0"><strong>Location:</strong> @game.Location</p>
                        <p class="mb-0 text-muted">
                            <span class="badge bg-primary">@game.Tags.FirstOrDefault()</span>
                            <span class="ms-2">Confirmed: @game.Participants.Count(p => p.Paid)/@game.ParticipantLimit</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    .game-card:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
        transition: 0.2s;
    }
</style>