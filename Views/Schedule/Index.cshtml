@model IEnumerable<FYP_QS_CODE.Models.Schedule>
@{
    ViewData["Title"] = "Game Schedule";
    var today = DateTime.Today;

    // Filter by StartTime.HasValue and use new ScheduleType enum
    var games = Model.Where(s => s.ScheduleType == FYP_QS_CODE.Models.ScheduleType.OneOff && 
                                 s.StartTime.HasValue && 
                                 s.StartTime.Value.Date >= today)
                     .OrderBy(s => s.StartTime);
    
    // Group by StartTime.Value
    var groupedGames = games.GroupBy(g => g.StartTime.Value.Date).OrderBy(g => g.Key);
}
<div class="container mt-4 page-wrapper">
    <h2 class="mb-4">Games Schedule</h2>

    @foreach (var dayGroup in groupedGames)
    {
        <h4 class="mt-5">
            @dayGroup.Key.ToString("dd/MM/yyyy (dddd)")
        </h4>

        @foreach (var game in dayGroup.OrderBy(g => g.StartTime))
        {
            <h6 class="text-muted mt-3">@(game.StartTime.HasValue ? game.StartTime.Value.ToString("hh:mm tt") : "No time set")</h6>
            
            <div class="card mb-3 shadow-sm game-card"
                 onclick="location.href='@Url.Action("Details", "Schedule", new { id = game.ScheduleId })'"
                 style="cursor:pointer;">
                <div class="card-body d-flex align-items-center">
                    <div>
                        <h5 class="card-title mb-1">@game.GameName</h5>
                        <p class="mb-0"><strong>Location:</strong> @game.Location</p>
                        <p class="mb-0 text-muted">
                            
                            <span class="badge bg-primary">@game.EventTag</span>
                            
                            <span class_comment="ms-2">Players: @game.NumPlayer</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    .game-card:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
        transition: 0.2s;
    }
</style>