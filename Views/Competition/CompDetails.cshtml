<!-- Award Modal -->
<div class="modal fade" id="awardModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Customize Award</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="awardForm">
          <div class="mb-3">
            <label class="form-label">Award Type</label>
            <select class="form-select" id="awardType">
              <option value="trophy">🏆 Trophy</option>
              <option value="medal">🥇 Medal</option>
              <option value="ribbon">🎖 Ribbon</option>
              <option value="crown">👑 Crown</option>
              <option value="star">⭐ Star</option>
              <option value="shirt">👕 Shirt</option>
              <option value="shoe">👟 Shoe</option>
              <option value="ticket">🎫 Ticket</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Award Name</label>
            <input type="text" class="form-control" id="awardName" placeholder="e.g. Best Player" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Award Description</label>
            <textarea class="form-control" id="awardDesc" rows="2" placeholder="Describe the award..."></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success" onclick="saveAward()">Save Award</button>
      </div>
    </div>
