<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Competition Listing</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    .competition-card:hover {
      background: #f8f9fa;
      transform: scale(1.01);
      transition: 0.2s;
    }
    .card-img-top {
      object-fit: cover;
      height: 150px;
    }
  </style>
</head>
<body class="p-4">

  <h2 class="mb-4">Competitions</h2>

  <!-- Tabs -->
  <ul class="nav nav-tabs" id="competitionTabs">
    <li class="nav-item"><a class="nav-link active" data-bs-toggle="tab" href="#all">All</a></li>
    <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#registration">Registration</a></li>
    <li class="nav-item"><a class="nav-link" data-bs-toggle="tab" href="#happening">Happening Now</a></li>
  </ul>

  <div class="tab-content mt-3">
    <!-- All Competitions -->
    <div class="tab-pane fade show active" id="all">
      <div class="card mb-3 competition-card">
        <div class="row g-0">
          <div class="col-md-3">
            <img src="https://via.placeholder.com/300x150.png?text=Poster" class="img-fluid rounded-start" alt="">
          </div>
          <div class="col-md-9">
            <div class="card-body">
              <h5 class="card-title">National Pickleball Open</h5>
              <div class="d-flex justify-content-between">
                <span><i class="bi bi-trophy me-1"></i> 10 Oct 2025</span>
                <span class="badge bg-success">Open for Registration</span>
              </div>
              <div class="mt-2 d-flex justify-content-between">
                <span><i class="bi bi-geo-alt me-1"></i> Kuala Lumpur</span>
                <span>12 teams</span>
                <span>Round Robin</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- another dummy competition -->
      <div class="card mb-3 competition-card">
        <div class="row g-0">
          <div class="col-md-3">
            <img src="https://via.placeholder.com/300x150.png?text=Poster" class="img-fluid rounded-start" alt="">
          </div>
          <div class="col-md-9">
            <div class="card-body">
              <h5 class="card-title">Community Challenge Cup</h5>
              <div class="d-flex justify-content-between">
                <span><i class="bi bi-trophy me-1"></i> 15 Oct 2025</span>
                <span class="badge bg-warning text-dark">Registration Closed</span>
              </div>
              <div class="mt-2 d-flex justify-content-between">
                <span><i class="bi bi-geo-alt me-1"></i> Penang</span>
                <span>8 teams</span>
                <span>Pool Play</span>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

    <!-- Registration Tab -->
    <div class="tab-pane fade" id="registration">
      <p>Only competitions open or closed for registration shown here...</p>
    </div>

    <!-- Happening Now -->
    <div class="tab-pane fade" id="happening">
      <p>Only ongoing competitions shown here...</p>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
